<Window x:Class="TechProgram5.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Повторить ввод или остановиться" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="retryButton" Content="Retry" Width="80" Margin="0,0,10,0" Click="RetryButton_Click"/>
                <Button x:Name="cancelButton" Content="Cancel" Width="80" Click="CancelButton_Click" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>